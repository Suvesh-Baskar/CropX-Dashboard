<!-- Dashboard Elements -->
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <!-- Weather info elements -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-blue">
                <!-- <div class="panel-heading dark-overlay">Blue Panel</div>-->
                <div class="panel-body" style="margin-top: 10px !important">
                    <p id="weatherInfo">Fetching Weather info ....</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Current Status of Sensors and Actuators -->
    <div class="row">
        <div class="col-lg-12">
            <h2>Current Status</h2>
        </div>
        <div class="col-md-6">
            <!-- Actuator Status -->
            <div class="panel panel-info">
                <div class="panel-heading">Actuator Status</div>
                <div class="panel-body">
                    <div>
                        <p>Pump Motor
                            {{#if motor}}
                            <button style="float: right;" type="button" class="btn btn-sm btn-warning">Running</button>
                            {{else}}
                            <button style="float: right;" type="button" class="btn btn-sm btn-default">Idle</button></p>
                        {{/if}}
                        </p>
                    </div>
                    <div style="margin-top: 20px">
                        <p>Valve One
                            {{#if valve1}}
                            <button style="float: right;" type="button" class="btn btn-sm btn-warning">Running</button>
                            {{else}}
                            <button style="float: right;" type="button" class="btn btn-sm btn-default">Idle</button></p>
                        {{/if}}
                        </p>
                    </div>
                    <div style="margin-top: 20px">
                        <p>Valve Two
                            {{#if valve2}}
                            <button style="float: right;" type="button" class="btn btn-sm btn-warning">Running</button>
                            {{else}}
                            <button style="float: right;" type="button" class="btn btn-sm btn-default">Idle</button></p>
                        {{/if}}
                        </p>
                    </div>
                    <div style="margin-top: 20px">
                        <p>Valve Three
                            {{#if valve3}}
                            <button style="float: right;" type="button" class="btn btn-sm btn-warning">Running</button>
                            {{else}}
                            <button style="float: right;" type="button" class="btn btn-sm btn-default">Idle</button></p>
                        {{/if}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <!-- Sensor Status -->
            <div class="panel panel-info ">
                <div class="panel-heading">
                    Sensor Status
                </div>
                <div class="panel-body">
                    <div class="col-md-12 no-padding">


                        <div class="row progress-labels">
                            <div class="col-sm-6">Battery</div>
                            <div class="col-sm-6" style="text-align: right;">{{battery}}%</div>
                        </div>
                        <div class="progress">
                            <div data-percentage="0%" style="width: {{battery}}%;" class="progress-bar progress-bar-red"
                                role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <div class="row progress-labels">
                            <div class="col-sm-6">Soil 1</div>
                            <div class="col-sm-6" style="text-align: right;">{{soil1}}%</div>
                        </div>
                        <div class="progress">
                            <div data-percentage="0%" style="width: {{soil1}}%;" class="progress-bar progress-bar-blue"
                                role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <div class="row progress-labels">
                            <div class="col-sm-6">Soil 2</div>
                            <div class="col-sm-6" style="text-align: right;">{{soil2}}%</div>
                        </div>
                        <div class="progress">
                            <div data-percentage="0%" style="width: {{soil2}}%;" class="progress-bar progress-bar-blue"
                                role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <div class="row progress-labels">
                            <div class="col-sm-6">Soil 3</div>
                            <div class="col-sm-6" style="text-align: right;">{{soil3}}%</div>
                        </div>
                        <div class="progress">
                            <div data-percentage="0%" style="width: {{soil3}}%;" class="progress-bar progress-bar-blue"
                                role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
    <!--/.row-->
</div>
<!--/.main-->
<!-- Dashboard Elements -->
<script type="text/javascript" src="js/weather.js"></script>